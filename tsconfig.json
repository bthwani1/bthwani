{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // خفّف الفحص قدر الإمكان:
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    // اجعل TS يلتقط فقط مجلّد types/ لديك:
    "typeRoots": ["./types"],

    "outDir": "./dist",
    "rootDir": "./src"
  }
}
