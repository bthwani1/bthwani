{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],   // ✅ تبسيط لتشمل كل الملفات
  "exclude": ["node_modules", "dist"]
}
